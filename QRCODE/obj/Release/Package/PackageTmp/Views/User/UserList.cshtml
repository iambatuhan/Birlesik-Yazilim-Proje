@using PagedList;
@using PagedList.Mvc;

@model IEnumerable<EntityLayer.Concrete.User>
@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>UserList</h2>
<link rel="stylesheet" href=" ~/fonts/StyleSheet1.css">

<br />
@using (Html.BeginForm())
{
    <p style="text-align:right">
        Ara:@Html.TextBox("p")
        <input type="submit" value="bul" />
    </p>
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>UserTc</th>
        <th>AD Soyad</th>
        <th>User Image</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.UserID</td>
            <td>@x.UserTc</td>
            <td>@x.UserName</td>
            <td>@x.UserImage</td>
            <td>@x.Mail</td>
           
            <td><a href="/User/DeleteUser/@x.UserID" class="custom-btn btn-3" style="text-align:center">Sil</a></td>

            <td><a href="/User/UpdateEkle/@x.UserID" class="custom-btn btn-14" style="text-align:center">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/User/AddNewUser/" class="custom-btn btn-8" style="text-align:center">Yeni Kullanıcı</a>
<br />
<br />
<p>
    <center>
        @Html.PagedListPager((IPagedList)Model, page => Url.Action("UserList", new { page }))
    </center>
</p>
